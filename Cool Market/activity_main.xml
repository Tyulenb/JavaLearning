<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/TV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="serif-monospace"
        android:textSize="40sp"
        android:text="COOL MARKET">
    </TextView>

    <CheckBox
        android:id="@+id/beef"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Говядина">
    </CheckBox>
    <CheckBox
        android:id="@+id/pork"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Свинина">
    </CheckBox>
    <CheckBox
        android:id="@+id/lamb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Баранина">
    </CheckBox>
    <CheckBox
        android:id="@+id/chicken"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Курица">
    </CheckBox>
    <CheckBox
        android:id="@+id/turkey"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Индейка">
    </CheckBox>
    <CheckBox
        android:id="@+id/duck"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Утка">
    </CheckBox>

    <RadioGroup
        android:id="@+id/RG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RB1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Доставка">

        </RadioButton>
        <RadioButton
            android:id="@+id/RB2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Самовывоз">
        </RadioButton>
    </RadioGroup>
    <EditText
        android:id="@+id/ET"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Комментарий к заказу">
    </EditText>
    <Button
        android:id="@+id/purchase"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Оформить заказ">
    </Button>
    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Очистить корзину">
    </Button>

    <TextView
        android:id="@+id/cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"></TextView>

</LinearLayout>